{{#if loggedIn}}
  {{>private-nav}}
  {{else}}
  {{>public-nav}}
{{/if}}

{{#each posts as |post|}}

  <div class="card">
    <div class="card-header">
      <a href="/post/{{id}}">
        {{post.title}}
      </a>
    </div>
    <div class="card-body">
      <p class="card-text">
        {{post.content}}
      </p>
      <footer class="blockquote-footer">
        {{post.user.username}}
        @
        {{formatDate post.createdAt}}
      </footer>
    </div>
  </div>

{{/each}}