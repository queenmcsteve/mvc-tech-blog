{{#each posts as |post|}}

  <div class="card">
    <div class="card-header">
      {{post.title}}
    </div>
    <div class="card-body">
      <p class="card-text">
        {{post.content}}
      </p>
      <footer class="blockquote-footer">
        {{post.user.username}}
        @
        {{formatDate post.createdAt}}
      </footer>
    </div>
  </div>

{{/each}}