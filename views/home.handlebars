{{#if loggedIn}}
  {{>private-nav}}
  {{else}}
  {{>public-nav}}
{{/if}}

<div class="d-flex align-items-center justify-content-center flex-column">
{{#each posts as |post|}}
  <div class="card" style="max-width: 600px;">
    <div class="card-header">
      <a href="/post/{{id}}">
        {{post.title}}
      </a>
    </div>
    <div class="card-body">
      <p class="card-text">
        {{post.content}}
      </p>
      <footer class="blockquote-footer">
        {{post.user.username}}
        @
        {{formatDate post.createdAt}}
      </footer>
    </div>
  </div>
{{/each}}
</div>