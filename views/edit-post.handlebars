<div id="edit-post">
    <div class="mb-3">
        <p>Post ID:</p>
        <p id="post-id">
            {{post.id}}
        </p>
    </div>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Post Title</label>
    <textarea type="text" class="form-control" id="exampleFormControlInput1">
      {{post.title}}
    </textarea>
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Post Content</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">
      {{post.content}}
    </textarea>
  </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="submit" id="edit-post-btn">Edit Post</button>
        <button class="btn btn-primary" type="delete" id="delete-post-btn">Delete Post</button>
    </div>
</div>